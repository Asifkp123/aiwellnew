import 'package:aiwel/components/theme/light_theme.dart';
import 'package:flutter/material.dart';

import '../../../components/constants.dart';
import '../../../components/text_widgets/text_widgets.dart';

Widget AddPalButtonWidget(BuildContext context, {double? buttonHeight,double? buttonWidth}) {
  final height = buttonHeight ?? 25;
  final width = buttonWidth ?? 25;
  return SizedBox(
    height: height,
    child: Container(
      decoration: BoxDecoration(
        color: lightTheme.primaryColor,
        borderRadius: BorderRadius.circular(8),
      ),
      child: MaterialButton(
        minWidth:  width,
        onPressed:  () {
            Navigator

        },
        elevation: 0,
        color: Colors.transparent,
        shape: RoundedRectangleBorder(
          borderRadius: BorderRadius.circular(8),
        ),
        padding: EdgeInsets.symmetric(
          horizontal: 8,
          vertical:
          height < 20 ? 0 : 4, // No vertical padding for small buttons
        ),
        child: RegularWhiteText(
          "Add Now",
          fontSize: 12,
        ),
      ),
    ),
  );
}
